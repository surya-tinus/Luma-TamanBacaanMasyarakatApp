<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.projectgroup7.HomeFragment"
        android:label="Home">

        <!-- tambahkan action ini di dalam fragment home -->
        <action
            android:id="@+id/action_homeFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />

        <action
            android:id="@+id/action_homeFragment_to_exploreFragment"
            app:destination="@id/exploreFragment" />
    </fragment>

    <fragment
        android:id="@+id/borrowedFragment"
        android:name="com.example.projectgroup7.BorrowedFragment"
        android:label="Borrowed"/>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.projectgroup7.SearchFragment"
        android:label="Search"/>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.projectgroup7.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.projectgroup7.BookDetailFragment"
        android:label="Book Detail"
        tools:layout="@layout/fragment_book_detail" />

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.projectgroup7.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore">

        <action
            android:id="@+id/action_exploreFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>

</navigation>
