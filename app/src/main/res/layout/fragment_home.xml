<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:fillViewport="true"
    tools:context=".HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Greeting Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="32dp"
            android:paddingBottom="30dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_greeting_rounded"
            android:elevation="2dp">


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Evening,"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/username_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User123456"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#6BBF59"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="95dp"
                android:layout_height="130dp"
                android:src="@drawable/library"
                android:contentDescription="@string/app_name"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_section"
            android:layout_marginTop="-40dp"
        android:elevation="3dp"
        android:paddingHorizontal="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="100dp"
        android:gravity="center_horizontal">


        <!-- Categories -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"
                android:textColor="#233d18" />

            <com.google.android.material.chip.ChipGroup

                android:id="@+id/layout_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true"
                android:gravity="center_horizontal">

                <com.google.android.material.chip.Chip
                    android:text="Romance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textColor="#677e5d"
                    app:chipBackgroundColor="#fff9f9" />

                <com.google.android.material.chip.Chip
                    android:text="Horror"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textColor="#677e5d"
                    app:chipBackgroundColor="#fff9f9" />

                <com.google.android.material.chip.Chip
                    android:text="Comedy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textColor="#677e5d"
                    app:chipBackgroundColor="#fff9f9" />

                <com.google.android.material.chip.Chip
                    android:text="Fiction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textColor="#677e5d"
                    app:chipBackgroundColor="#fff9f9" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Books by Category -->
            <TextView
                android:id="@+id/tv_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books by Category"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#233d18"
                android:layout_marginTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category_books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:textColor="#233d18"/>

            <Button
                android:id="@+id/btn_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore All"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#fff9f9"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="28dp"
                android:backgroundTint="#677e5d"
                android:elevation="2dp" />

            <!-- New Books -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New at the Library"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#233d18"
                android:layout_marginTop="28dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_new_books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#233d18"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
