<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Member"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#233d18"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvDetailEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@example.com"
        android:textColor="#555"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvDetailRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role: Member"
        android:textColor="#555"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvDetailPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. HP: -"
        android:textColor="#555"
        android:layout_marginBottom="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvActiveStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E8F5E9"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvActiveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Peminjaman"
                android:textSize="14sp"
                android:textColor="#233d18"/>

            <TextView
                android:id="@+id/tvActiveCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aman (0 Buku)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#233d18"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Riwayat Peminjaman Buku"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#233d18"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMemberHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F9F9F9"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnBackMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:textStyle="bold"
        android:backgroundTint="#677e5d"
        android:textColor="@android:color/white"/>

</LinearLayout>